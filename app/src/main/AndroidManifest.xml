<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.nsx.cookbookzzw">
    <!--网络访问权限-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!--查看网络状态的权限-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>





    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" /> <!-- 获取设备信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- 获取MAC地址 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" /> <!-- 允许程序录制音频 -->
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />






    <application
        android:name="com.nsx.cookbookzzw.app.AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.nsx.cookbookzzw.ZhuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.lsh.packagelibrary.WebTwoActivity"
            android:configChanges="orientation|screenSize"
            android:hardwareAccelerated="true">
        </activity>

        <activity
            android:name="com.nsx.cookbookzzw.ui.activity.WelcomActivity"
            android:theme="@style/NoAction_Full">
        </activity>
        <activity
            android:name="com.nsx.cookbookzzw.ui.activity.GuideActivity"
            android:theme="@style/NoAction_Full"/>
        <activity
            android:name="com.nsx.cookbookzzw.ui.activity.MainActivity"
            android:launchMode="singleTask"/>
        <activity android:name="com.nsx.cookbookzzw.ui.activity.FoodListActivity"/>
        <activity android:name="com.nsx.cookbookzzw.ui.activity.FoodDetailActivity"/>
        <activity
            android:name="com.nsx.cookbookzzw.ui.activity.ImageShowActivity"
            android:theme="@style/NoAction_Full"/>
        <activity
            android:name="com.nsx.cookbookzzw.ui.activity.StepActivity"
            android:theme="@style/NoAction_Full"/>
        <activity android:name="com.nsx.cookbookzzw.ui.activity.SearchActivity"/>
        <activity android:name="com.nsx.cookbookzzw.ui.activity.SearchResultActivity"/>
        <activity android:name="com.nsx.cookbookzzw.ui.activity.ChatActivity"/>
        <activity android:name="com.nsx.cookbookzzw.ui.activity.HistoryActivity"/>
        <activity android:name="com.nsx.cookbookzzw.ui.activity.FestivalActivity"/>
        <activity android:name="com.nsx.cookbookzzw.ui.activity.SolarTermsActivity"/>
    </application>
</manifest>